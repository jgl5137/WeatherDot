<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Measurement">
        <ListPreference
            app:defaultValue="fahrenheit"
            app:entries="@array/measurement_entries"
            app:entryValues="@array/measurement_values"
            app:key="tempMeasure"
            app:title="Measurement Preference"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Language">
        <ListPreference
            app:defaultValue="en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="lang"
            app:title="Language Preference"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>