<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <TextView
        android:id="@+id/current_time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="@id/current_weather_display"
        app:layout_constraintStart_toStartOf="@id/current_weather_display"
        app:layout_constraintEnd_toEndOf="@id/current_weather_display" />

    <ImageView
        android:id="@+id/current_weather_display"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_day"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerview" />

    <ImageView
        android:id="@+id/current_condition_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/current_weather_display"
        app:layout_constraintBottom_toBottomOf="@id/current_weather_display"
        app:layout_constraintStart_toStartOf="@id/current_weather_display"
        app:layout_constraintEnd_toEndOf="@id/current_weather_display" />

    <TextView
        android:id="@+id/current_temp_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@id/current_weather_display"
        app:layout_constraintStart_toStartOf="@id/current_weather_display"
        app:layout_constraintEnd_toEndOf="@id/current_weather_display"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/current_weather_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/list_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>