<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherDot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_800</item>
        <item name="colorPrimaryVariant">@color/blue_grey_dark</item>
        <item name="colorPrimaryLight">@color/blue_grey_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="alertDialogTheme">@style/PrefDialogAlert</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="dayColor">@color/sky_blue</item>
        <item name="nightColor">@color/purple</item>
    </style>

    <style name="Theme.WeatherDot.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatherDot.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="Theme.WeatherDot.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.WeatherDot.NavigationViewTheme">
        <item name="android:textColorSecondary">@color/orange_500</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/orange_500</item>
        <item name="colorControlHighlight">@color/orange_500</item>
    </style>

    <style name="PrefDialogAlert" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange_500</item>
        <item name="android:background">@color/blue_grey_800</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>